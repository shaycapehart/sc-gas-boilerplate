{
  "name": "sc-gas-boilerplate",
  "version": "0.0.4",
  "author": "shaycapehart",
  "description": "Google Apps Script starter project with TypeScript support",
  "license": "MIT",
  "private": true,
  "main": "src/index.ts",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "push": "clasp push",
    "watch": "clasp push --watch",
    "envvars": "env-cmd node config.js",
    "deploy": "env-cmd -x clasp deploy --deploymentId $GAS_DEPLOY_ID -d APIv7"
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.53",
    "currency.js": "^2.0.4",
    "dayjs": "^1.11.1",
    "env-cmd": "^10.1.0",
    "gas-lib": "^2.0.4",
    "json-beautify": "^1.1.1",
    "lodash": "^4.17.21",
    "simpler-color": "^1.0.1"
  },
  "keywords": [
    "clasp",
    "google-apps-script",
    "gas",
    "typescript",
    "rollup-js",
    "prettier",
    "eslint",
    "javascript",
    "babel",
    "husky",
    "lint-staged"
  ]
}
